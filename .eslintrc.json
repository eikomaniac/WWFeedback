{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": ["error", 2],
    "react/jsx-props-no-spreading": "off",
    "react/prop-types": "off",
    "react/jsx-closing-tag-location": "off",
    "react/react-in-jsx-scope": "off",
    "consistent-return": "off",
    "max-len": "off"
  }
}
